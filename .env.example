# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Gmail
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# Adzuna (optional)
ADZUNA_APP_ID=your_id
ADZUNA_APP_KEY=your_key

# SerpApi (optional — Google Jobs aggregator, ~$50/mo)
SERPAPI_KEY=your_key

# JSearch / RapidAPI (optional — free tier: 500 req/mo)
JSEARCH_API_KEY=your_key

# Database
# SQLite (local development)
DATABASE_URL=sqlite:///data/job_radar.db

# PostgreSQL (Supabase - for GitHub Actions deployment)
# Get connection string from: Supabase Dashboard → Settings → Database → Connection string → URI
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# DATABASE_URL=postgresql://postgres.xxxx:password@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Dashboard
DASHBOARD_PORT=8501

# Scheduler
JOB_CHECK_INTERVAL_MINUTES=30
EMAIL_CHECK_INTERVAL_MINUTES=15
