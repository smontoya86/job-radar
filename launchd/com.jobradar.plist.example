<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.jobradar</string>

    <key>ProgramArguments</key>
    <array>
        <!-- Replace $HOME with your actual home directory path -->
        <string>$HOME/job-radar/venv/bin/python</string>
        <string>-u</string>
        <string>$HOME/job-radar/src/main.py</string>
    </array>

    <key>WorkingDirectory</key>
    <string>$HOME/job-radar</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>$HOME/job-radar/logs/jobradar.log</string>

    <key>StandardErrorPath</key>
    <string>$HOME/job-radar/logs/jobradar.error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>$HOME/job-radar/venv/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>PYTHONPATH</key>
        <string>$HOME/job-radar</string>
    </dict>
</dict>
</plist>
